[ignore]
# TODO: Re-enable after migration to apollo-client
<PROJECT_ROOT>/src/client/app/.*
.*/__generated__/.*

# Test
.*/__tests__/.*

# npm
.*/node_modules/.*/test/.*
.*/node_modules/babel-plugin-.*
.*/node_modules/config-chain/.*
.*/node_modules/eslint.*
.*/node_modules/graphiql/.*
