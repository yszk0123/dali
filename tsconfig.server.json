{
  "compilerOptions": {
    "allowSyntheticDefaultImports": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "allowJs": true,
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "jsx": "react",
    "lib": [
      "es5",
      "es6",
      "dom",
      "es2015.core",
      "es2015.collection",
      "es2015.generator",
      "es2015.iterable",
      "es2015.promise",
      "es2015.proxy",
      "es2015.reflect",
      "es2015.symbol",
      "es2015.symbol.wellknown",
      "esnext.asynciterable"
    ],
    "baseUrl": ".",
    "paths": {
      "schema": ["data/schema.ts"]
    }
  },
  "include": ["./types/**/*", "./src/server/**/*", "./src/shared/**/*"],
  "exclude": ["node_modules"]
}
